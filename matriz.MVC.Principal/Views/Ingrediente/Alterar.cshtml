@using matriz.Core.Application.DTOs.Pizzaria;
@model matriz.Core.Application.DTOs.Pizzaria.IngredienteDTO;

@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- INÍCIO DO CONTEÚDO -->
<div class="cn-cont col-sm-12 col-md-12 col-lg-10 col-xl-10 col-xxl-10">
    <!-- INÍCIO DO CONTAINER -->
    <div class="container">

        <!-- INÍCIO DOS BREADCRUMBS -->
        <div class="cn-breadcrumbs breadcrumb mb-3">
            <a asp-area="" asp-controller="Ingrediente" asp-action="Index" class="breadcrumb-item">Sistema: Ingrediente</a>
        </div>
        <!-- FIM DO BREADCRUMBS -->

        <h2 class="mb-3">Manutenção/Ingrediente/Alterar</h2>
        <!-- INÍCIO DA DIV - TABELA -->
        <div class="cn-div-table mb-3">
            <!-- INÍCIO DA TABELA -->
            <!-- FIM DA TABELA -->
        </div>

        <form asp-action="Alterar">
            <div class="row container">
                <div class="col-12">
                    <div class="row ">
                        <div class="form-group col-md-2 text-md-start">
                            Código
                        </div>
                        <div class="form-group col-md-10 text-md-start">
                            <input asp-for="IngredienteId" class="form-control border border-2 disabled" readonly />
                            <span asp-validation-for="IngredienteId" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row ">
                        <div class="form-group col-md-2 text-md-start">
                            Ingrediente
                        </div>
                        <div class="form-group col-md-10 text-md-start">
                            <input asp-for="Nome" class="form-control border border-2 " />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="row">
                        <div class="form-group col-md-12 text-lg-center text-sm-center">
                            <button type="submit" class="btn btn-outline-success border-secondary fa fa-save"> Alterar Ingrediente</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- FIM DO CONTAINER -->
</div>
<!-- FIM DO CONTEÚDO -->