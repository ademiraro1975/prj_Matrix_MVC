@model matriz.Core.Application.DTOs.Pizzaria.IngredienteDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

 }

<!-- INÍCIO DO CONTEÚDO -->
<div class="cn-cont col-sm-12 col-md-12 col-lg-10 col-xl-10 col-xxl-10">
    <!-- INÍCIO DO CONTAINER -->
    <div class="container">
        <!-- INÍCIO DOS BREADCRUMBS -->
        <div class="cn-breadcrumbs breadcrumb mb-3">
            <a asp-area="" asp-controller="Ingrediente" asp-action="Index" class="breadcrumb-item">Sistema: Ingrediente</a>
        </div>
        <!-- FIM DO BREADCRUMBS -->

        <h2 class="mb-3">Manutenção/Ingrediente/Consulta</h2>

        <!-- INÍCIO DA DIV - TABELA -->
        <div class="cn-div-table mb-3">
            <!-- INÍCIO DA TABELA -->
            <!-- FIM DA TABELA -->
        </div>
        <div class="row container">
            <div class="col-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IngredienteId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IngredienteId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                </dl>
                <br />
                <hr />
                <div class="row">
                    <div class="form-group col-md-6 text-lg-start text-sm-start">
                        <a asp-area="" asp-controller="Ingrediente" asp-action="Index"><button class="btn btn-outline-info border-secondary bi bi-pencil-square Heading">Voltar</button></a>
                    </div>
                    <div class="form-group col-md-6 text-lg-end text-sm-end">
                        <a asp-action="Alterar" asp-route-ingredienteId=@Model.IngredienteId><button class="btn btn-outline-warning border-secondary bi bi-pencil-square Heading"> Editar</button></a>
                    </div>
                </div>
            </div>
        </div>
        <!-- FIM DA DIV - TABELA -->
    </div>
    <!-- FIM DO CONTAINER -->
</div>
<!-- FIM DO CONTEÚDO -->