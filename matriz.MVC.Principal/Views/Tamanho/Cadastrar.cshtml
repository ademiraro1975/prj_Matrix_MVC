@model matriz.Core.Application.DTOs.Pizzaria.TamanhoDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- INÍCIO DO CONTEÚDO -->
<div class="cn-cont col-sm-12 col-md-12 col-lg-10 col-xl-10 col-xxl-10">
    <!-- INÍCIO DO CONTAINER -->
    <div class="container">

        <!-- INÍCIO DOS BREADCRUMBS -->
        <div class="cn-breadcrumbs breadcrumb mb-3">
            <a asp-area="" asp-controller="Ingrediente" asp-action="Index" class="breadcrumb-item">Sistema: Tamanho</a>
        </div>
        <!-- FIM DO BREADCRUMBS -->

        <h2 class="mb-3">Manutenção/Tamanho/Cadastro</h2>
        <!-- INÍCIO DA DIV - TABELA -->
        <div class="cn-div-table mb-3">
            <!-- INÍCIO DA TABELA -->
            <!-- FIM DA TABELA -->
        </div>

        <br />
        <form asp-action="Cadastrar" enctype="multipart/form-data">
            <div class="row container">
                <div class="col-12">
                    <div class="row ">
                        <div class="form-group col-md-2 text-md-start">
                            Código
                        </div>
                        <div class="form-group col-md-10 text-md-start">
                            <input asp-for="TamanhoId" class="form-control border border-2 disabled" readonly />
                            <span asp-validation-for="TamanhoId" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row ">
                        <div class="form-group col-md-2 text-md-start">
                            Tamanho
                        </div>
                        <div class="form-group col-md-10 text-md-start">
                            <input asp-for="Descricao" class="form-control border border-2 " />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row ">
                        <div class="form-group col-md-2 text-md-start">
                            Numero de Pedaços
                        </div>
                        <div class="form-group col-md-10 text-md-start">
                            <input asp-for="NumPedaco" class="form-control border border-2 " />
                            <span asp-validation-for="NumPedaco" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <hr />
                    <br />
                    <div class="row">
                        <div class="form-group col-md-12 text-lg-center text-sm-center">
                            <button type="submit" class="btn btn-outline-success border-secondary fa fa-save"> Salvar Tamanho</button>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </form>
    </div>
<!-- FIM DO CONTAINER -->
</div>
<!-- FIM DO CONTEÚDO -->